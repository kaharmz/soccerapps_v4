<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:elevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

            <TextView
                android:id="@+id/no_standing"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:textAlignment="center"
                android:textSize="12sp"
                tools:text="1" />

            <TextView
                android:id="@+id/club_name_standing"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.6"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:text="Everton" />

            <TextView
                android:id="@+id/play_standing"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:textAlignment="center"
                android:textSize="12sp"
                tools:text="13" />

            <TextView
                android:id="@+id/win_standing"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:textAlignment="center"
                android:textSize="12sp"
                tools:text="8" />

            <TextView
                android:id="@+id/draw_standing"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:textAlignment="center"
                android:textSize="12sp"
                tools:text="3" />

            <TextView
                android:id="@+id/lose_standing"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:textAlignment="center"
                android:textSize="12sp"
                tools:text="0" />

            <TextView
                android:id="@+id/point_standing"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:textAlignment="center"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:text="45" />

            <TextView
                android:id="@+id/gf_standing"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:textAlignment="center"
                android:textSize="12sp"
                tools:text="20" />

            <TextView
                android:id="@+id/ga_standing"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:textAlignment="center"
                android:textSize="12sp"
                tools:text="10" />

            <TextView
                android:id="@+id/gd_standing"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:textAlignment="center"
                android:textSize="12sp"
                tools:text="23" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>